# https://github.com/deoren/postfix-examples

# Purpose: Select default mail transport based on sender address.

user = mailrelay1
password = PLACEHOLDER

hosts = db-server-01.subdomain.example.org:3306
dbname = mailserver

query =
    SELECT transport
    FROM sender_dependent_default_transport_maps
    WHERE sender = '%s'
    AND enabled = '1';
