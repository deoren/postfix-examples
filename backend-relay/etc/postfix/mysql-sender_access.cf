# Purpose: Whitelist or blacklist senders based on the MAIL FROM address

user = mailrelay1
password = PLACEHOLDER

hosts = db-server-01.subdomain.example.org:3306
dbname = mailserver

query =
    SELECT action
    FROM access_check_senders
    WHERE sender = '%s'
    AND enabled = '1';
